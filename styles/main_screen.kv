#:kivy 2.3.1

<MainScreen>:
    name: 'main'
    canvas.before:
        Color:
            rgba: .85, .60, .85, 1
        Rectangle:
            pos: self.pos
            size: self.size


    GridLayout:
        cols: 1
        BoxLayout:

            #size_hint_y: .9
            orientation: 'vertical'

            Label:
                size_hint_y: .3
                text: 'Главная страница'


            GridLayout:
                cols: 2
                rows: 2
                spacing: 10
                padding: 50

                size_hint_y: .9

                IconButton:
                    #text: 'button'
                    #background_color: 0, 0, 0, 0
                    source: 'static/image/free-icon-swiss-roll-6775854.png'
                    size_hint: None, None
                    size: 170.6, 170.6


                    on_press: root.manager.current = 'recipe'

                Label:
                    text: 'меренговый рулет'


                IconButton:
                    #text: 'button'
                    #background_color: 0, 0, 0, 0
                    on_press: root.manager.current = 'recipe'
                    source: 'static/image/free-icon-cheesecake-1923460.png'
                    size_hint: None, None
                    size: 170.6, 170.6

                Label:
                    text: 'чизкейк'




